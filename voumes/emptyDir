apiVersion: v1
kind: Pod
metadata:
    name: nginx-emptydir
spec:
  containers:
  - name: nginx
    image: nginx:1.14.2
    ports:
       - containerPort: 80
    volumeMounts:
    - name: shared-vol
      mountPath: "/var/log/nginx"
    volumeMounts:
    - name: shared-vol
      mountPath: "/var/log/nginx"
  volumes: 
  - name: shared-vol
    emptyDir: {} 